<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme.Recce" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow
        </item>
        <item name="android:colorEdgeEffect">@color/dividerGrey</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.Recce.LargeComponent
        </item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.Recce.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close_white_24dp</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Recce.ActionBar</item>
        <item name="toolbarStyle">@style/Widget.Recce.Toolbar</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <style name="Theme.Recce" parent="BaseTheme.Recce" />

    <style name="Theme.Recce.BottomSheetDialog"/>
    <style name="Theme.Recce.BottomSheetDialog.Creators">
        <item name="colorOnSurface">@android:color/white</item>
        <item name="colorOnBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="Theme.Recce.OnboardingBase">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>
    <style name="Theme.Recce.Onboarding" parent="Theme.Recce.OnboardingBase"/>

    <style name="Theme.Recce.Badges">
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="Theme.Recce.Tags" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="ThemeOverlay.Recce.ActionBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:colorBackground">?attr/colorSurface</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="tint">?android:attr/textColorPrimary</item>
    </style>
    <style name="Widget.Recce.ActionMode" parent="Widget.AppCompat.ActionMode"/>

    <style name="Widget.Recce.Button.TextButton.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">24dp</item>
    </style>
    <style name="Widget.Recce.Button.TextButton.IconOnly.Small" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="iconSize">20dp</item>
    </style>

    <style name="Widget.Recce.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Recce.Toolbar</item>
    </style>
    <style name="Widget.Recce.Toolbar.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="ThemeOverlay.Recce.Toolbar" parent="">
        <item name="colorPrimary">?attr/colorSurface</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Recce.PinName" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Recce.Number" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="TextAppearance.Recce.NumberHeader" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.Recce.GpsSectionHeader" parent="TextAppearance.MaterialComponents.Headline5"/>
    <style name="TextAppearance.Recce.GpsHeader" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="TextAppearance.Recce.GpsNumber" parent="TextAppearance.MaterialComponents.Headline6"/>
    <style name="TextAppearance.Recce.GpsInfo" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="TextAppearance.Recce.Onboarding.Description" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="TextAppearance.Recce.Ruler.Header" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="ShapeAppearance.Recce.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/large_padding</item>
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.Recce.InfoDialogs" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowAnimationStyle">@style/Animation.Recce.InfoDialogs</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Theme.Recce.Preference" parent="Theme.Recce">
        <item name="tint">?android:attr/textColorPrimary</item>
    </style>

    <style name="Animation.Recce.InfoDialogs" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/info_dialog_enter_animation</item>
        <item name="android:windowExitAnimation">@anim/info_dialog_exit_animation</item>
    </style>
</resources>

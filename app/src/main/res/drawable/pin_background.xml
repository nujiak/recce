    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSurface" />
            <corners android:radius="@dimen/large_padding" />
        </shape>
    </item>
    <item>
        <ripple android:color="@android:color/white">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorSurface" />
                    <corners android:radius="@dimen/large_padding" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>

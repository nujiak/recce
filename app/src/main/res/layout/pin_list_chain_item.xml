<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pin_list_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/tiny_padding"
    android:elevation="2dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="true"
    tools:cardBackgroundColor="@color/tagRed">

    <ImageView
        android:id="@+id/route_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:adjustViewBounds="true"
        android:padding="@dimen/large_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_route"/>
    <ImageView
        android:id="@+id/area_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:adjustViewBounds="true"
        android:padding="@dimen/large_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_area"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chain_group"
            style="@style/Theme.Reconnaissance.Tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/small_padding"
            android:background="@drawable/tag_background"
            android:elevation="0dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="100sp"
            android:maxLines="1"
            android:paddingStart="@dimen/tiny_padding"
            android:paddingEnd="@dimen/tiny_padding"
            android:textAllCaps="true"
            android:textStyle="bold"
            tools:text="Buildings"
            tools:textColor="#000000" />
        <TextView
            android:id="@+id/chain_name"
            style="@style/TextAppearance.Reconnaissance.PinName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="bottom"
            android:lines="1"
            android:maxLines="1"
            android:paddingStart="@dimen/large_padding"
            android:paddingTop="@dimen/small_padding"
            android:paddingEnd="@dimen/large_padding"
            android:paddingBottom="@dimen/small_padding"
            tools:text="Name" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/pin_background_lower"
            android:orientation="vertical"
            android:paddingStart="@dimen/large_padding"
            android:paddingTop="@dimen/small_padding"
            android:paddingBottom="@dimen/small_padding"
            tools:ignore="RtlSymmetry">

            <TextView
                style="@style/TextAppearance.Reconnaissance.NumberHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkpoints"/>

            <TextView
                android:id="@+id/chain_checkpoints"
                style="@style/TextAppearance.Reconnaissance.Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Audi, Benz, Chevy" />

            <TextView
                style="@style/TextAppearance.Reconnaissance.NumberHeader"
                android:id="@+id/chain_distance_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:text="@string/distance"/>

            <TextView
                android:id="@+id/chain_distance"
                style="@style/TextAppearance.Reconnaissance.Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="395930 503850" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/selection_shade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pinSelectionShade"
        android:visibility="gone" />

    <TextView
        android:id="@+id/chain_selected_index"
        style="@style/Theme.Reconnaissance.Badges"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end|top"
        android:layout_margin="@dimen/small_padding"
        android:background="@drawable/pin_selection_badge"
        android:elevation="4dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="11"/>
</com.google.android.material.card.MaterialCardView>

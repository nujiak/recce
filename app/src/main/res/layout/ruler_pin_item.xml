<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ruler_pin_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="48dp"
    android:layout_marginEnd="48dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"
    app:strokeWidth="2dp">

    <LinearLayout
        android:id="@+id/ruler_pin_item_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/large_padding">

        <TextView
            android:id="@+id/ruler_pin_name"
            style="@style/TextAppearance.Recce.PinName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_padding"
            android:textColor="?android:attr/textColorPrimary"
            tools:text="Name" />

        <TextView
            android:id="@+id/ruler_pin_grid_system"
            style="@style/TextAppearance.Recce.NumberHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            tools:text="@string/utm" />

        <TextView
            android:id="@+id/ruler_pin_grid"
            style="@style/TextAppearance.Recce.Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            tools:text="395930 503850" />
        </LinearLayout>
</com.google.android.material.card.MaterialCardView>

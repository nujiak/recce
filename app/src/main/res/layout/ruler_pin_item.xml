<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ruler_pin_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="48dp"
    android:layout_marginEnd="48dp"
    app:cardBackgroundColor="@color/tagRed"
    app:cardCornerRadius="16dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/pinDetailShade"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:id="@+id/ruler_pin_item_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ruler_pin_name"
            style="@style/TextAppearance.Reconnaissance.PinName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:gravity="bottom|center"
            android:paddingStart="@dimen/large_padding"
            android:paddingTop="@dimen/small_padding"
            android:paddingEnd="@dimen/large_padding"
            android:paddingBottom="@dimen/small_padding"
            tools:text="Name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pinDetailShade"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:paddingStart="@dimen/large_padding"
            android:paddingTop="@dimen/small_padding"
            android:paddingEnd="@dimen/large_padding"
            android:paddingBottom="@dimen/small_padding">

                <TextView
                    style="@style/TextAppearance.Reconnaissance.NumberHeader"
                    android:id="@+id/ruler_pin_grid_system"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/utm" />

                <TextView
                    android:id="@+id/ruler_pin_grid"
                    style="@style/TextAppearance.Reconnaissance.Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="395930 503850" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
